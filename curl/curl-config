prefix=/usr/lib64/darkmatter
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
    cat <<EOF
Usage: curl-config [OPTION]

Available values for OPTION include:

  --built-shared says 'yes' if libcurl was built shared
  --ca        ca bundle install path
  --cc        compiler
  --cflags    pre-processor and compiler flags
  --checkfor [version] check for (lib)curl of the specified version
  --configure the arguments given to configure when building curl
  --features  newline separated list of enabled features
  --help      display this help and exit
  --libs      library linking information
  --prefix    curl install prefix
  --protocols newline separated list of enabled protocols
  --static-libs static libcurl library linking information
  --version   output version information
  --vernum    output the version information as a number (hexadecimal)
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    # this deals with options in the style
    # --option=value and extracts the value part
    # [not currently used]
    -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) value= ;;
    esac

    case "$1" in
    --built-shared)
        echo yes
        ;;

    --ca)
	echo ""/etc/ssl/certs/ca-certificates.crt""
	;;

    --cc)
	echo "cc"
	;;

    --prefix)
	echo "$prefix"
	;;

    --feature|--features)
        for feature in SSL IPv6 libz AsynchDNS NTLM ""; do
            test -n "$feature" && echo "$feature"
        done
	;;

    --protocols)
        for protocol in DICT FILE FTP FTPS GOPHER HTTP HTTPS IMAP IMAPS POP3 POP3S RTSP SCP SFTP SMTP SMTPS TELNET TFTP; do
            echo "$protocol"
        done
	;;

    --version)
	echo libcurl 7.21.7
	exit 0
	;;

    --checkfor)
        checkfor=$2
        cmajor=`echo $checkfor | cut -d. -f1`
        cminor=`echo $checkfor | cut -d. -f2`
        # when extracting the patch part we strip off everything after a
	# dash as that's used for things like version 1.2.3-CVS
	cpatch=`echo $checkfor | cut -d. -f3 | cut -d- -f1`
        checknum=`echo "$cmajor*256*256 + $cminor*256 + ${cpatch:-0}" | bc`
        numuppercase=`echo 071507 | tr 'a-f' 'A-F'`
        nownum=`echo "obase=10; ibase=16; $numuppercase" | bc`

	if test "$nownum" -ge "$checknum"; then
	  # silent success
	  exit 0
	else
	  echo "requested version $checkfor is newer than existing 7.21.7"
	  exit 1
	fi
	;;

    --vernum)
	echo 071507
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
       	if test "X${prefix}/include" = "X/usr/include"; then
          echo ""
        else
          echo "-I${prefix}/include"
        fi
       	;;

    --libs)
	if test "X${exec_prefix}/lib" != "X/usr/lib" -a "X${exec_prefix}/lib" != "X/usr/lib64"; then
	   CURLLIBDIR="-L${exec_prefix}/lib "
	else
	   CURLLIBDIR=""
	fi
	if test "Xno" = "Xyes"; then
	  echo ${CURLLIBDIR}-lcurl -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -lc -lm -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -lcares -lssh2 -lssl -lcrypto -lrt -lc -lm -lssl -lcrypto -ldl -lz -lssh2 -lc -lm
	else
	  echo ${CURLLIBDIR}-lcurl -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -lc -lm -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -lc -lm
	fi
	;;

    --static-libs)
	echo ${exec_prefix}/lib/libcurl.a -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -lc -lm -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib -lcares -lssh2 -lssl -lcrypto -lrt -lc -lm -lssl -lcrypto -ldl -lz -lssh2 -lc -lm
	;;

    --configure)
      echo " '--prefix=/usr/lib64/darkmatter' '--with-ssl=/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter' '--with-libssh2=/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter' '--enable-ares=/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter' '--disable-ldap' '--disable-ldaps' '--enable-telnet' '--enable-tftp' '--enable-ftp' '--enable-http' '--enable-crypto-auth' '--enable-cookies' '--enable-static' '--enable-shared' 'CC=cc' 'CFLAGS=-fpic -fPIC -fpic -fPIC' 'LDFLAGS=-L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib  -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -L/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/lib  -Wl,-rpath -Wl,/usr/lib64/darkmatter/lib -lc -lm' 'LIBS=-lc -lm' 'CPPFLAGS=-I/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/include -I/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/include/ncurses -I/home/lindell/git/dm-stack/.build/usr/lib64/darkmatter/include/libxml2'"
    ;;

    *)
        echo "unknown option: $1"
	usage 1
	;;
    esac
    shift
done

exit 0
